<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/background"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.valentina.virtuallifecoach.HealthyRecipe">

    <ProgressBar
        android:id="@+id/recipeprogressbar_recipe"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:visibility="gone" />

    <TextView
        android:id="@+id/recipenametextview_recipe"
        android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/recipeimageview_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/recipeurltextview_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web" />

    <TextView
        android:id="@+id/recipetypetextview_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
